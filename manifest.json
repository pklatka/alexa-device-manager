{
    "manifest_version": 3,
    "name": "Alexa Device Manager",
    "version": "1.0.0",
    "description": "List, remove and rename Alexa devices directly from the browser!",
    "action": {
        "default_popup": "src/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.alexa.amazon.com/*"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ]
}